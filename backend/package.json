{
  "name": "divestrael",
  "version": "1.0.0",
  "author": "t2pellet",
  "license": "MIT",
  "description": "Boycott, Divestment, Sanction Tool",
  "main": "main.js",
  "private": true,
  "scripts": {
    "prebuild": "prisma generate && eslint --fix 'src/schemas/zod/**/*.ts'",
    "build": "tsc -p tsconfig.json && tsc-alias",
    "start": "node dist/main.js",
    "dev": "nodemon | pino-pretty",
    "type-check": "tsc --build --force",
    "update:packages": "yarn npm-check-updates -u",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "lint:error": "eslint --quiet 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "prepare": "cd .. && husky backend/.husky",
    "commit": "cz"
  },
  "engines": {
    "node": "22"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "./node_modules/.bin/ts-node --files -r tsconfig-paths/register ./src"
  },
  "dependencies": {
    "@fastify/cors": "11.0.1",
    "@fastify/helmet": "13.0.1",
    "@fastify/swagger": "9.4.2",
    "@fastify/swagger-ui": "5.2.2",
    "@krsbx/prisma-fqp": "^0.2.8",
    "@prisma/client": "^6.5.0",
    "@prisma/sdk": "^4.0.0",
    "axios": "^1.8.4",
    "dotenv": "^16.4.5",
    "fastify": "5.2.2",
    "fastify-type-provider-zod": "^4.0.2",
    "lodash": "^4.17.21",
    "openai": "^4.90.0",
    "pino": "^9.6.0",
    "prisma": "^6.5.0",
    "zod": "^3.24.2",
    "zod-prisma-types": "^3.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.22.0",
    "@types/bcryptjs": "~2.4.6",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint-plugin-prettier": "^3.1.3",
    "@types/http-errors": "2.0.4",
    "@types/lint-staged": "~13.3.0",
    "@types/lodash": "^4",
    "@types/node": "^22.13.10",
    "@types/nodemon": "1.19.6",
    "@types/prettier": "2.7.3",
    "@typescript-eslint/parser": "^8.26.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^3.8.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "9.0.11",
    "lint-staged": "15.2.7",
    "nodemon": "3.1.4",
    "nyc": "17.0.0",
    "pino-pretty": "^13.0.0",
    "prettier": "3.3.3",
    "tap": "21.0.0",
    "ts-node": "10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "packageManager": "yarn@4.7.0",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
